int main(int argc, char** argv)
{
	// init and say hi
	ros::init(argc, argv, "landing_controller");
	ROS_INFO("Started landing_controller!");

	// create subscribers and publishers
	ros::NodeHandle node_handle;
        ros::Subscriber visual_subscriber = node_handle.subscribe("/whycon_ros/visual", 1000, visual_callback);
//	ros::Subscriber camera_imu_subscriber = node_handle.subscribe("/iris/camera/imu", 1000, camera_imu_callback);
//	ros::Subscriber imu_subscriber = node_handle.subscribe("/iris/imu", 1000, imu_callback);
//	landing_target_publisher = node_handle.advertise<mavros_msgs::LandingTarget>("/mavros/landing_target/raw", 1000);
	landing_pad_position_publisher = node_handle.advertise<geometry_msgs::Vector3>("/landing_pad/relative_position", 1000);

	// for Gazebo simulation
/**************************************************************************************************************************************************************************/
	ros::Subscriber link_state_subscriber = node_handle.subscribe("/gazebo/link_states", 1000, link_states_callback);
	landing_pad_global_position_publisher = node_handle.advertise<geometry_msgs::Pose>("/landing_pad/global_position", 1000);
/**************************************************************************************************************************************************************************/
	
	ros::Rate loop_rate(20);
	while( ros::ok() )
	{
		// callbacks
		ros::spinOnce();

		tf2::Transform gimbal_to_global = gimbal_tilt_link_transform * gimbal_base_link_transform * iris_base_link_transform;
		geometry_msgs::TransformStamped gimbal_to_global_stamped;
	       	gimbal_to_global_stamped.transform = tf2::toMsg(gimbal_to_global);

		tf2::doTransform(landing_pad_camera_pose, landing_pad_global_pose, gimbal_to_global_stamped);

		if( ros::Time::now() - last_detection_time < abort_time )
		{
			landing_pad_global_position_publisher.publish(landing_pad_global_pose);
		;
//			send_landing_target_message();
		}

		loop_rate.sleep();
	}

	return 0;
}
